{%- if section.blocks.size > 0 -%}
  <div class="custom-collection-list page-width">
    {%- if section.settings.section_heading != blank -%}
      <div class="title-wrapper">
        <h2>{{ section.settings.section_heading }}</h2>
      </div>
    {%- endif -%}

    <div class="grid grid--1-col grid--2-col-tablet grid--3-col-desktop">
      {%- for block in section.blocks -%}
        <div class="grid__item">
          <a href="{{ block.settings.image_link }}" class="custom-collection-list__card">
            {%- if block.settings.image != nil -%}
              <div class="media media--square">
            {% render 'lazy-image', src: block.settings.image, width: "large" %}
              </div>
              {% else %}
              <div class="media media--square">

              {{ 'image' | placeholder_svg_tag }}
              </div>
            {%- endif -%}

            <div class="custom-collection-list__card--info">
              {%- if block.settings.heading != blank -%}
                <div class="h3">
                  {{ block.settings.heading }}
                </div>
              {%- endif -%}
              {%- if block.settings.description != blank -%}
                {{ block.settings.description }}
              {%- endif -%}
            </div>
          </a>
        </div>
      {%- endfor -%}
    </div>
  </div>
{%- endif -%}


{% schema %}
{
  "name": "Custom Collection List",
  "class": "section",
  "tag": "section",
  "max_blocks": 6,
  "settings": [
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section heading",
      "default": "Shop The Collections"
    }
  ],
  "blocks": [
    {
      "type": "collection-content",
      "name": "Collection content",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "800x800 .jpg recommended"
        },
        {
          "type": "url",
          "id": "image_link",
          "label": "Image link"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Image Heading"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description",
          "default": "<p>Light, breezy, and made with planet-friendly eucalyptus, these favorites will keep you cool when the sun is shining.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Collection List",
      "blocks": [
        { "type": "collection-content" },
        { "type": "collection-content" },
        { "type": "collection-content" },
        { "type": "collection-content" },
        { "type": "collection-content" },
        { "type": "collection-content" }
      ]
    }
  ]
}
{% endschema %}