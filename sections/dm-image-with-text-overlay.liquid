      ]
    }
  ],
  "blocks": [
    {
      "name": "Caption",
      "type": "caption",
      "settings": [
        {
          "type": "text",
          "id": "caption",
          "label": "Text"
        }
      ]
    },
    {
      "name": "Heading",
      "type": "heading",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Text"
        }
      ]
    },
    {
      "name": "Paragraph",
      "type": "paragraph",
      "settings": [
        {
          "type": "richtext",
          "id": "paragraph",
          "label": "Text"
        }
      ]
    },
    {
      "name": "Button",
      "type": "button",
      "settings": [
        {
          "type": "header",
          "content": "First button"
        },
        {
          "type": "text",
          "id": "first_button_text",
          "label": "Button text"
        },
        {
          "type": "url",
          "id": "first_button_link",
          "label": "Button link"
        },
        {
          "type": "select",
          "id": "first_button_type",
          "label": "Button type",
          "options": [
